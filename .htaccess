Options -Indexes
DirectoryIndex index.html index.php
<IfModule mod_headers.c>
Header always set X-Content-Type-Options "nosniff"
Header always set X-Frame-Options "DENY"
Header set Referrer-Policy "no-referrer-when-downgrade"
# Evita bloquear postMessage do Google Identity Services em popups/iframes
Header always set Cross-Origin-Opener-Policy "unsafe-none"
Header always set Cross-Origin-Embedder-Policy "unsafe-none"
</IfModule>
# Regras de cache para assets estáticos (imagens, JS, CSS, fontes)
<IfModule mod_expires.c>
	ExpiresActive On
	ExpiresByType image/jpg "access plus 1 year"
	ExpiresByType image/jpeg "access plus 1 year"
	ExpiresByType image/png "access plus 1 year"
	ExpiresByType image/gif "access plus 1 year"
	ExpiresByType image/webp "access plus 1 year"
	ExpiresByType image/svg+xml "access plus 1 year"
	ExpiresByType text/css "access plus 1 month"
	ExpiresByType text/javascript "access plus 1 month"
	ExpiresByType application/javascript "access plus 1 month"
	ExpiresByType application/x-font-ttf "access plus 1 year"
	ExpiresByType font/ttf "access plus 1 year"
	ExpiresByType font/otf "access plus 1 year"
	ExpiresByType application/font-woff "access plus 1 year"
	ExpiresByType application/font-woff2 "access plus 1 year"
	ExpiresByType application/vnd.ms-fontobject "access plus 1 year"
</IfModule>

# Favicon fallback
RewriteEngine On
RewriteCond %{REQUEST_URI} ^/favicon\.ico$
RewriteCond %{DOCUMENT_ROOT}/img/image.png -f
RewriteRule ^favicon\.ico$ /img/image.png [L]

<IfModule mod_headers.c>
	# Cache-Control para assets estáticos
	<FilesMatch "\.(js|css|jpg|jpeg|png|gif|webp|svg|woff|woff2|ttf|otf)$">
		Header set Cache-Control "public, max-age=31536000, immutable"
	</FilesMatch>

	# Permitir carregamento de fontes por origem cruzada (útil se serve via CDN/outsourced hosts)
	<FilesMatch "\.(woff2?|ttf|otf|eot)$">
		Header set Access-Control-Allow-Origin "*"
	</FilesMatch>
</IfModule>

# Sessão PHP configurada programaticamente em server/api/_session_bootstrap.php
# (evita travar ambiente de desenvolvimento com cookie Secure/domínio fixo)
